<div class="lore-roll-popup">
  {{#if target}}
    <div class="roll-target">
      {{#if target.img}}
        <img class="roll-target-img" src="{{target.img}}" alt="{{target.name}}" />
      {{/if}}
      <div class="roll-target-text">
        <span class="roll-target-label">{{localize "LORE.SheetLabels.Target"}}:</span>
        <span class="roll-target-name">{{target.name}}</span>
      </div>
    </div>
  {{/if}}

  <p class="roll-formula">{{rollData.formula}}</p>

  <label for="difficulty-input" class="difficulty-input-label">{{localize "LORE.SheetLabels.Difficulty" }}:</label>
  <input type="number" id="difficulty-input" class="difficulty-input" value="6" />
  <div class="horizontal-line"></div>

  <label for="modifier-input" class="modifier-input-label">{{localize "LORE.SheetLabels.AdditionalMod" }}:</label>
  <input type="number" id="modifier-input" class="modifier-input" value="" />
  {{#if options}}
    <div class="roll-options">
      {{#each options}}
        <button class="roll-option" data-option="{{@key}}">{{this}}</button>
      {{/each}}
    </div>
  {{/if}}
  <div class="roll-popup-actions">
    <button class="confirm-roll">Confirm</button>
    <button class="close-popup">Close</button>
  </div>
</div>
