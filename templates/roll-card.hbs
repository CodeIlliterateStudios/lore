<div class="lore-roll-card">
  
  <!-- Main/normal roll -->
  <div class="lore-main-roll">
    {{{mainRollHtml}}}
  </div>

  <!-- LORE Die (optional) -->
  {{#if loreHtml}}
  <div class="lore-die">
    {{{loreHtml}}}
  </div>
  {{/if}}

  <!-- Morale -->
  {{#if morale}}
  <div class="lore-morale-mod">Morale: {{moraleText}}</div>
  {{/if}}

  <!-- Critical Failure (optional) -->
  {{#if critFailure}}
