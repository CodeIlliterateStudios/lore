{{! Weapon Details Tab }}
<section class='tab details {{tab.cssClass}}' data-group='primary' data-tab='details'>
  <div class='resource'>
    
    <span>{{system.formula}}</span>
    <div class='grid grid-4col'>
      <div class='grid-span-1'>
        <label class='resource-label'>{{localize 'LORE.Item.Gear.FIELDS.numDice.label'}}</label>
        <input type='text' name='system.roll.diceNum' value='{{system.roll.diceNum}}' data-dtype='Number' />
      </div>
    </div>
  </div>
</section>
